{
	"name": "tours",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "HOST=0.0.0.0 PORT=${PORT:-3000} node build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:deploy": "node scripts/deploy-database-structure.js",
		"db:deploy:caprover": "node scripts/deploy-database-caprover.js",
		"db:export": "node scripts/export-database-structure.js",
		"db:deploy:help": "node scripts/deploy-database-structure.js --help"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.8",
		"@types/node": "^22.15.27",
		"@types/pg": "^8.11.6",
		"@types/qrcode": "^1.5.5",
		"drizzle-kit": "^0.24.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vite-plugin-pwa": "^1.0.0"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp"
		]
	},
	"packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.826.0",
		"@aws-sdk/s3-request-presigner": "^3.826.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^2.0.2",
		"@paralleldrive/cuid2": "^2.2.2",
		"@stripe/stripe-js": "^7.3.1",
		"arctic": "^3.7.0",
		"argon2": "^0.40.3",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.33.0",
		"express": "^4.21.2",
		"glob": "^11.0.0",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.510.0",
		"pg": "^8.16.0",
		"postgres": "^3.4.7",
		"qr-code-styling": "^1.9.2",
		"qr-scanner": "^1.4.2",
		"qrcode": "^1.5.4",
		"resend": "^4.5.1",
		"runed": "^0.26.0",
		"sharp": "^0.34.2",
		"stripe": "^18.2.0",
		"tsx": "^4.19.4"
	}
}
